<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="60dp"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:contentDescription="@string/album_image_content_description"
        android:maxWidth="60dp"
        android:id="@+id/list_item_album_image"
        android:layout_margin="5dp"
        android:layout_alignParentLeft="true" />
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_song_name"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:gravity="center_vertical"
        android:id="@+id/list_item_song_name"
        android:inputType="none"
        android:layout_marginTop="15dp"
        android:layout_alignTop="@+id/list_item_album_image"
        android:layout_toRightOf="@+id/list_item_album_image"
        android:layout_toEndOf="@+id/list_item_album_image" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/list_item_album_name"
        android:id="@+id/list_item_album_name"
        android:layout_below="@+id/list_item_song_name"
        android:layout_alignLeft="@+id/list_item_song_name"
        android:layout_alignStart="@+id/list_item_song_name" />

</RelativeLayout>